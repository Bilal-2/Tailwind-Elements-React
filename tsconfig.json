{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "ts-node": {
    "esm": true
  }
}
